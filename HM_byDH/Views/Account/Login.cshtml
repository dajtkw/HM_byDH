@using HM_byDH.Models.ViewModels
@using HM_byDH.Models.ViewModels.Authentication
@model LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white text-center rounded-top">
                    <h2 class="mb-0">Đăng nhập</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label text-muted"></label>
                        </div>
                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold">Đăng nhập</button>
                        <div class="mt-3 text-center">
                            <a asp-action="ForgotPassword" class="d-block text-decoration-none text-muted mb-2">Quên mật khẩu?</a>
                            <a asp-action="ResendConfirmationEmail" class="d-block text-decoration-none text-muted">Gửi lại email xác nhận?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
