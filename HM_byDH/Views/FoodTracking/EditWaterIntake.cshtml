@using HM_byDH.Models.ViewModels.Meals
@model EditWaterIntakeViewModel
@{
    ViewData["Title"] = "Sửa nước uống";
}

<h2>Sửa nước uống</h2>
<form asp-action="EditWaterIntake" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="IsGoalMet">Đã uống đủ nước hôm nay?</label>
        <input asp-for="IsGoalMet" type="checkbox" />
        <span asp-validation-for="IsGoalMet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}