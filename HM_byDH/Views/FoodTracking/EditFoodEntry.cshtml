@using HM_byDH.Models.ViewModels
@model EditFoodEntryViewModel
@{
    ViewData["Title"] = "Sửa món ăn";
}

<h2>Sửa món ăn</h2>
<form asp-action="EditFoodEntry" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Chọn món ăn</label>
        <select asp-for="FoodItemId" class="form-control">
            @foreach (var item in Model.FoodItems)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="FoodItemId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}